---
import type { Website } from '../services/cms';
import { getMediaAssetUrl } from '../utils/media';

interface Props {
  title?: string;
  websiteData?: Website | null;
  lang?: string;
}

const { title, websiteData, lang } = Astro.props;
const siteName = websiteData?.header?.brandDisplayName || websiteData?.name || 'Astro Site';
const defaultTitle = websiteData?.seoDefaults?.metaTitle || siteName;
const pageTitle = title ? `${title} | ${siteName}` : defaultTitle;
const metaDescription = websiteData?.seoDefaults?.metaDescription || `Content from ${siteName}`;
const htmlLang = lang || websiteData?.locale || websiteData?.defaultLocale || 'en';
const faviconUrl = getMediaAssetUrl(websiteData?.brand?.favicon) || '/favicon.svg';
const themeColor = websiteData?.theme?.brandColor || websiteData?.theme?.palette?.primary || undefined;
---

<!doctype html>
<html lang={htmlLang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={metaDescription} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href={faviconUrl} />
    <meta name="generator" content={Astro.generator} />
    {themeColor && <meta name="theme-color" content={themeColor} />}
    <title>{pageTitle}</title>
    <style>
      body {
        font-family: system-ui, sans-serif;
        margin: 0;
        padding: 0;
        color: #333;
      }
      .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem 1rem;
      }
    </style>
  </head>
  <body>
    <main class="container">
      <slot />
    </main>
  </body>
</html>