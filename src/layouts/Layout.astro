---
interface Props {
  title?: string;
  websiteData?: {
    name?: string;
    favicon?: {
      url: string;
      alternativeText: string;
    };
  };
}

const { title, websiteData } = Astro.props;
const siteName = websiteData?.name || 'Astro Site';
const pageTitle = title ? `${title} | ${siteName}` : siteName;
const faviconUrl = websiteData?.favicon?.url ? (websiteData.favicon.url.startsWith('http') ? websiteData.favicon.url : `https://cms.falerci.com${websiteData.favicon.url}`) : '/favicon.svg';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href={faviconUrl} />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <style>
      body {
        font-family: system-ui, sans-serif;
        margin: 0;
        padding: 0;
        color: #333;
      }
      .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem 1rem;
      }
    </style>
  </head>
  <body>
    <main class="container">
      <slot />
    </main>
  </body>
</html>